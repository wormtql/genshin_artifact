<template>
    <div class="config-root">
    {{#items}}
        {{{html}}}
    {{/items}}
    </div>
</template>

<script>
export const weaponName = "{{weaponName}}"
export default {
    name: "{{weaponName}}.wcfg",
    props: ["value"],
    methods: {
        handleChangeValue(name, value) {
            let temp = Object.assign({}, this.value.{{weaponName}})
            temp[name] = value
            this.$emit("input", {
                "{{weaponName}}": temp
            })
        },
    },
    getDefaultConfig() {
        const defaultConfig = {
            "{{weaponName}}": {
            {{#items}}
                {{name}}: {{default}},
            {{/items}}
            }
        }
        return defaultConfig
    }
}
</script>

